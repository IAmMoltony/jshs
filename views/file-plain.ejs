<!DOCTYPE html>
<html>
    <head>
        <title>jshs | View file</title>
        <link rel="stylesheet" href="/style.css">
        <link rel="stylesheet" href="/hljs/styles/default.css">
    </head>
    <body>
        <%- include('../partials/navbar.ejs'); %>
        <h2>View file</h2>
        <%- include('../partials/viewfile-actions.ejs'); %>
        <p id="fileName"></p>
        <hr>
        <pre><code id="fileCode"></code></pre>

        <script src="js/params.js"></script>
        <script src="js/api.js"></script>
        <script src="js/viewfile-common.js"></script>
        <script src="/hljs/highlight.min.js"></script>
        <script>
            const fileCode = document.querySelector("#fileCode");

            jshsApi.rawFile(getQueryParam("folder"), getQueryParam("name"), data => {
                fileCode.textContent = data;
                hljs.highlightAll();
            });
        </script>
    </body>
</html>
