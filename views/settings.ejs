<!DOCTYPE html>
<html>
    <head>
        <title>jshs | Settings</title>
        <link rel="stylesheet" href="/style.css">
        <link rel="icon" type="image/png" href="/img/favicon.png">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
    </head>
    <body>
        <%- include('../partials/navbar.ejs'); %>
        <h2>Settings</h2>

        <fieldset id="user-settings-box">
            <legend>User Settings</legend>
            <span style="display: none; color: red; font-weight: bold" id="usSettingsError"></span>
            <form action="/setTheme" method="post">
                <span>Theme: </span>
                <input type="radio" id="usRadioDarkMode" name="usTheme" value="dark">
                <label for="usRadioDarkMode">Dark</label>
                <input type="radio" id="usRadioLightMode" name="usTheme" value="light">
                <label for="usRadioLightMode">Light</label>
                &nbsp;
                <input type="submit" name="usThemeSubmit" id="usThemeSubmit" value="Set"><br>
                <span>Current theme is <b><%= colorTheme %></b>.</span>
            </form>
        </fieldset>

        <script src="js/params.js"></script>
        <script>
            if (getQueryParam("usInvalidTheme")) {
                const errorSpan = document.querySelector("#usSettingsError");
                errorSpan.innerHTML = "Please set a valid theme<br><br>";
                errorSpan.style.display = "";
            }
        </script>
    </body>
</html>
